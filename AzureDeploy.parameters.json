{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
    "parameters": {    
    "vmName": {
       "type": "string",
       "metadata": {
          "description": "Name of VM-Series FW in the Azure portal"
       },
       "defaultValue": "VM-FW1"
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing storage account used to store the VM's disks"
      }
    },
    "storageAccountExistingRG": {
       "type": "string",
       "defaultValue" : "rgkpmglab",
       "metadata": {
          "description": "Storage Accounts Resource Group location."
       }
    },
    "fwAvSet": {
       "type": "string",
       "metadata": {
          "description": "Availability Set name for Firewalls"
       },
       "defaultValue": "avset_pa_blob"
    },
    "vmSize": {
       "type": "string",
       "allowedValues": [
          "Standard_D3",
          "Standard_D4",
          "Standard_D3_v2",
          "Standard_D4_v2",
          "Standard_A4",
          "Standard_DS3_v2",
          "Standard_DS4_v2"
       ],
       "metadata": {
          "description": "Azure VM size for VM-Series"
       },
       "defaultValue": "Standard_D3_v2"
    },
    "virtualNetworkName": { 
      "type": "string",
      "metadata": {
        "description": "Name of the Virtual Network (VNET)"
      },
      "defaultValue": "vnet_core"
    },
    "virtualNetworkAddressPrefix": {
      "type": "string",
      "defaultValue": "10.162.144.0/22",
      "metadata": {
        "description": "Virtual network address CIDR"
      }
    },
    "virtualNetworkExistingRGName": {
      "type": "string",
      "defaultValue": "rg_kpmg",
      "metadata": {
        "description": "Name of resource group of existing VNET (if applicable)"
      }
    },
    "subnet0Name": {
      "type": "string",
      "defaultValue": "PA-MGMT",
      "metadata": {
        "description": "Subnet for Management"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "PA-UNTRUST",
      "metadata": {
        "description": "Subnet for Untrust"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "PA-TRUST",
      "metadata": {
        "description": "Subnet for Trust"
      }
    },
    "subnet3Name": {
      "type": "string",
      "defaultValue": "PA-VPN",
      "metadata": {
        "description": "Subnet for DMZ"
      }
    },
    "subnet0Prefix": {
      "type": "string",
      "defaultValue": "10.162.144.0/28",
      "metadata": {
        "description": "Mgmt subnet CIDR"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "192.168.200.0/24",
      "metadata": {
        "description": "Untrust subnet CIDR"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.162.144.48/28",
      "metadata": {
        "description": "Trust subnet CIDR"
      }
    },
    "subnet3Prefix": {
      "type": "string",
      "defaultValue": "10.162.144.16/28",
      "metadata": {
        "description": "VPN subnet CIDR"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username of the administrator account of VM-Series"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Password for the administrator account of VM-Series"
      }
    },
    "publicIPAddressName": {
      "type": "string",
      "metadata": {
        "description": "Name of FW1 MGMT Public Address"
      }
    },
    "imageVersion": {
      "type": "string",
      "metadata": {
        "description": "PAN OS Version"
      }
    },
    "imageSku": {
      "type": "string",
      "metadata": {
        "description": "Firewall License Model"
      }
    },
    "nsgName": {
      "type": "string",
      "defaultValue": "DefaultNSG",
      "metadata": {
        "description": "Name of existing Network Security Group for MGMT FW interface"
      }
    },
	"customData": {
			"type": "string"
	}
  }
} 